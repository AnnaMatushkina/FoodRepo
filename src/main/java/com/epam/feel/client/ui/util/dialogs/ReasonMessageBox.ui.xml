<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:box="urn:import:com.epam.feel.client.ui.util.box">
	<ui:with field='constants' type='com.epam.feel.client.EpamFeelConstants' />
	
	<g:VerticalPanel  horizontalAlignment="RIGHT">
		<box:FixedLengthTextArea ui:field="message" width="500px" height="400px"/>
		<g:HorizontalPanel horizontalAlignment="RIGHT">
			<g:Button ui:field="ok" text="{constants.ok}"/>
			<g:Button ui:field="cancel" text="{constants.cancel}"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 